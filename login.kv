LoginScreenManager:
    LoginWidget:
    SignUpWidget:
    AdminScreen:
    TeacherScreen:
    StudentScreen:
    AdmninSchoolSubscription:

<LoginWidget>:
    name:"login_screen"
    BoxLayout:
        orientation:"vertical"
        AnchorLayout:
            anchor_x:"center"
            anchor_y:"center"
        Label:
            text:"Enter email address"
        TextInput:
            id:email_input
            multiline:False
        Label:
            id:email_error
        Label:
            text:"Password"
        TextInput:
            id:password_input
            multiline:False
            password:True
            password_mask:"•"
        Label:
            id:password_error
        BoxLayout:
            orientation:"horizontal"
            Button:
                id:login_button
                text:"Log in"
                on_press:root.login()
            Button:
                id:create_account
                text:"Sign up"
                on_release: app.root.current = "sign_screen"

<SignUpWidget>
    name:"sign_screen"
    BoxLayout:
        orientation:"vertical"
        Label:
            text:"Create a Binks account"
            font_size:40
        Label:
            text:"First Name"
        TextInput:
            id:first_name
            multiline:False
        Label:
            id:fn_invalid
        Label:
            text:"Last Name"
        TextInput:
            id:last_name
            multiline:False
        Label:
            id:ln_invalid
        Label:
            text:"Account type"
        Spinner:
            text:"Student"
            values:"Student", "Teacher", "Admin"
            id:account_type      
        Label:
            text:"Email"
        TextInput:
            id:email_create
            multiline:False
        Label:
            id:email_invalid
        Label:
            text:"Password"
        TextInput:
            id:password_create
            multiline:False
            password:True
            password_mask:"•"
            allow_copy:False
        Label:
            id:password_invalid
        Label:
            text:"Confirm Password"
        TextInput:
            id:password_confirm
            multiline:False
            password:True
            password_mask:"•"
        Label:
            id:confirm_invalid
        Label:
            text:"School ID"
        TextInput:
            id:school_id
            multiline:False
        Label:
            id:id_invalid
        BoxLayout:
            orientation:"horizontal"   
            Button:
                id:back_to_login
                text:"Back"
                on_release: app.root.current = "login_screen"
            Button:
                text:"Create account"
                on_press:root.sign_up()
        
<AdmninSchoolSubscription>
    name:"register_school"
    BoxLayout:
        orientation:"vertical"
        Label:
            text:"School ID"
        TextInput:
            id:register_id
            multiline:False
        Label:
            id:id_error_register
        Label:
            text:"School Name"
        TextInput:
            id:school_name
            multiline:False
        Label:
            id:school_name_error
        Label:
            text:"School type"
        Spinner:
            id:school_type
            text:"High school"
            values:"High school", "Higher Education", "Middle school", "Primary school"
        Label:
            text:"Street number and name"
        TextInput:
            id:street_input
            multiline:False
        Label:
            id:street_error
        Label:
            text:"Country"
        TextInput:
            id:country_input
            multiline:False
        Label:
            id:country_error
        Label:
            text:"City"
        TextInput:
            id:city_input
            multiline:False
        Label:
            id:city_error
        Label:
            text:"Postal code"
        TextInput:
            id:postcode_input
            multiline:False
        Label:
            id:postcode_error
        BoxLayout:
            orientation:"horizontal"
            Button:
                text:"Back"
                on_press:app.root.current = "ADMIN_screen"
            Button:
                text:"Register school"
                on_press:root.register_school()

<AdminScreen>:
    name:"ADMIN_screen"
    BoxLayout:
        orientation:"vertical"
        Label:
            text:"Admin"
        Button:
            text:"Register your establishment"
            on_press:app.root.current = "register_school"
        Button:
            text:"Back"
            on_press:app.root.current = "login_screen"


<TeacherScreen>:
    name:"TEACHER_screen"
    BoxLayout:
        orientation:"vertical"
        Label:
            text:"Teacher"
        Button:
            text:"Back"
            on_press:app.root.current = "login_screen"

<StudentScreen>:
    name:"STUDENT_screen"
    BoxLayout:
        orientation:"vertical"
        Label:
            text:"Student"
        Label:
            text:"0j:00h:00m"
            id:matching_delay
        Button:
            text:"Match"
            on_press:root.write_palinfo()
        Label:
            id:penpal_name
        Label:
            id:penpal_school_name
        Label:
            id:penpal_school_address
        Label:
            id:penpal_city
        Label:
            id:penpal_country
        Button:
            text:"Back"
            on_press:app.root.current = "login_screen"
