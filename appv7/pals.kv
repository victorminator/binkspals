            rgba:get_hex("#110f1b")
        Rectangle:
            size:self.size
            pos:self.pos
    BoxLayout:
        orientation:"vertical"
        Label:
            text:"School description"
            font_name:"fonts/LunaticSuperstar-8KgB.otf"
            color:get_hex("#61f1ea")
