            size:self.size
            pos:self.pos
    BoxLayout:
        orientation:"vertical"
        Label:
            text:"BinksPals"
            font_name:"fonts/Shadow-7WdR.ttf"
            color:get_hex("#29bc90")
            font_size:'45sp'
        Label:
            text:"Verifying your email"
            font_name:"fonts/LunaticSuperstar-8KgB.otf"
            color:get_hex("#61f1ea")
